<div class="form-group">
    <label class="control-label">{{entry_size}}</label>
    <div class="fg-setting">
        <select name="size" class="form-control">
            {% for key, value in sizes %}
                {% if key == setting.size %}
                    <option value="{{key}}" selected="selected">{{value}}</option>
                {% else %}
                    <option value="{{key}}">{{value}}</option>
                {% endif %}
            {% endfor %}
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{entry_offset}}</label>
    <div class="fg-setting">
        <select name="offset" class="form-control">
            <option value="" {{setting.offset == ''? 'selected="selected"'}}>{{text_none}}</option>
            {% for key, value in sizes %}
                {% if key == setting.offset %}
                    <option value="{{key}}" selected="selected">{{value}}</option>
                {% else %}
                    <option value="{{key}}">{{value}}</option>
                {% endif %}
            {% endfor %}
        </select>
    </div>
</div>
<div class="form-group">
    <label class="control-label">{{entry_adaptive_design}}</label>

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>{{column_device}}</td>
                <td>{{column_offset}}</td>
                <td>{{column_size}}</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{text_tablet}}</td>
                <td>
                    <select name="offset_tablet" class="form-control">
                        <option value="" {{setting.offset_tablet == ''? 'selected="selected"'}}>{{text_none}}</option>
