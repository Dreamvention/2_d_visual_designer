.{{id}} {
    {% if not setting.global.design_margin_responsive %}
        {% if setting.global.design_margin_top %}
            margin-top: {{setting.global.design_margin_top}} !important;
        {% endif %}
        {% if setting.global.design_margin_left %}
            margin-left: {{setting.global.design_margin_left}} !important;
        {% endif %}
        {% if setting.global.design_margin_right %}
            margin-right: {{setting.global.design_margin_right}} !important;
        {% endif %}
        {% if setting.global.design_margin_bottom %}
            margin-bottom: {{setting.global.design_margin_bottom}} !important;
        {% endif %}
    {% endif %}

    {% if not setting.global.design_padding_responsive %}
        {% if setting.global.design_padding_top %}
            padding-top: {{setting.global.design_padding_top}} !important;
        {% endif %}
        {% if setting.global.design_padding_left %}
            padding-left: {{setting.global.design_padding_left}} !important;
        {% endif %}
        {% if setting.global.design_padding_right %}
            padding-right: {{setting.global.design_padding_right}} !important;
        {% endif %}
        {% if setting.global.design_padding_bottom %}
            padding-bottom: {{setting.global.design_padding_bottom}} !important;
        {% endif %}
    {% endif %}

    {% if setting.global.design_border_top %}
        border-top: {{setting.global.design_border_top}} {{ setting.global.design_border_style }} {{setting.global.design_border_color}} !important;
    {% endif %}
    {% if setting.global.design_border_left %}
        border-left: {{setting.global.design_border_left}} {{ setting.global.design_border_style }} {{setting.global.design_border_color}} !important;
    {% endif %}
    {% if setting.global.design_border_right %}
        border-right: {{setting.global.design_border_right}} {{ setting.global.design_border_style }} {{setting.global.design_border_color}} !important;
    {% endif %}
    {% if setting.global.design_border_bottom %}
        border-bottom: {{setting.global.design_border_bottom}} {{ setting.global.design_border_style }} {{setting.global.design_border_color}} !important;
    {% endif %}
    {% if setting.global.design_border_radius %}
        border-radius: {{setting.global.design_border_radius}} !important;
    {% endif %}
    {% if setting.global.design_background %}
        background-color: {{setting.global.design_background}} !important;
    {% endif %}
    {% if setting.global.design_background_image %}
        background-image: url({{setting.user.design_background_image}});
        {% if setting.global.design_background_image_position_vertical and setting.global.design_background_image_position_horizontal %}
            background-position: {{setting.global.design_background_image_position_vertical}} {{setting.global.design_background_image_position_horizontal}} !important;
        {% endif %}
        {% if setting.global.design_background_image_style == 'cover' %}
            background-size: cover;
            background-repeat: no-repeat;
        {% endif %}
        {% if setting.global.design_background_image_style == 'contain' %}
            background-size: contain;
            background-repeat: no-repeat;
        {% endif %}
        {% if setting.global.design_background_image_style == 'repeat' %}
            background-repeat: repeat;
        {% endif %}
        {% if setting.global.design_background_image_style == 'no-repeat' %}
            background-repeat: no-repeat;
        {% endif %}
        {% if setting.global.design_background_image_style == 'parallax' %}
            display: block;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        {% endif %}
    {% endif %}
    {% if setting.global.additional_css_content %}
        {{setting.global.additional_css_content}}
    {% endif %}
}

